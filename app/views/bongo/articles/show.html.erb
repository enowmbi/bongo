<%= render @article %>

<footer>
  <% if policy(@article).update? %>
    <%= link_to edit_article_path(@article) do %>
      <b>Edit</b>
    <% end %>
  <% end %>

  <% if policy(@article).destroy? %>
    <%= link_to @article, method: :delete, data: {confirm: "Are you sure?"} do %>
      <em>Delete</em>
    <% end %>
  <% end %>

  <%= link_to articles_path  do %>
    <i>Back</i>
  <% end %>
</footer>
